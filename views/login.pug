extends base

block content
    #base-map.position-absolute.top-0.bottom-0.w-100.opacity-50
    .form-signin.w-300px.p-5.border.rounded-3.bg-light.shadow.m-auto.z-2
        form.d-flex.flex-column.login-form
            h1.h3.mb-5.fw-normal.text-center Log in
            .form-floating.mb-2
                input.form-control(type='email' id='floatingEmail' placeholder='name@example.com' name='email' required)
                label(for='floatingEmail') Email address
            .form-floating.mb-4
                input.form-control(type='password' id='floatingPassword' placeholder='Password' name='password' required minLength='4')
                label(for='floatingPassword') Password
            button.btn.btn-primary.w-100.py-2(type='submit') Log in
            button.btn.btn-outline-dark.w-100.p-2.mt-2.login-btn-google(type='button')
                i.bi.bi-google.p-2
                span Login with google
            a.btn.btn-link.text-secondary.align-self-end.mt-2(type='button' href='/forget') Forgot password?

