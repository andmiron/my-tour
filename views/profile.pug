extends base

block append head
    style.
        .nav-pills .nav-link.active {
            background-color: #fff;
            border: solid;
        }

mixin navItem(path, text)
    li.nav-item
        a.nav-link.link-secondary.fs-4(href=`/${path}`)= text

mixin inputGroup(groupId, type, text)
    .input-group.mb-3
        label(for=groupId)
            span.input-group-text= text
        input.form-control(id=groupId type=type)

mixin profileListItem(key, value)
    li.list-group-item= `${key}: ${value}`

block content
    .container
        .row.p-3.g-5
            .col-2.p-3.d-flex.flex-column
                h4 My account
                ul.nav.nav-pills.flex-column
                    +navItem('profile', 'Profile')
                    +navItem('billing', 'Billing')
                    +navItem('my-tours', 'My tours')
                    +navItem('my-bookings', 'My bookings')
                    +navItem('my-reviews', 'My reviews')
            .col-4.p-3
                .d-flex.flex-column.gap-3
                    h5 Profile information
                    ul.list-group
                        +profileListItem('Email', user.email)
                        +profileListItem('Role', user.role)
                        +profileListItem('Creation date', user.createdAt.toLocaleString())
            .col-4.p-3
                .d-flex.flex-column.justify-content-between.mb-5
                    .d-flex.flex-column.gap-3
                        h5 Change photo
                        .row
                            .col-4.text-center
                                img.img-fluid.rounded-circle(src=`/img/default_user.jpg` alt=`User photo` style='height:5em')
                            .col-8
                                label.form-label(for='inputFile') Your photo
                                input.form-control(id='inputFile' type='file')
                        .row.text-center
                            .col-4
                                button.btn.btn-primary Delete
                            .col-4
                                button.btn.btn-primary Generate
                            .col-4
                                button.btn.btn-primary Upload
                form.d-flex.flex-column.gap-2
                    h5.mb-2 Confirm email
                    label.visually-hidden(for='confirmEmail') Confirm email
                    input.form-control-plaintext(type='text' id='confirmEmail' readonly value= user.email)
                    button.btn.btn-primary.align-self-end(type='submit') Confirm email
                form.d-flex.flex-column.gap-2
                    h5.mb-2 Change email
                    +inputGroup('inputEmail', 'email', 'Email')
                    button.btn.btn-primary.align-self-end(type='submit') Change email
                form.d-flex.flex-column.gap-2
                    h5.mb-2 Change password
                    +inputGroup('inputOldPassword', 'password', 'Old password')
                    +inputGroup('inputNewPassword', 'password', 'New Password')
                    +inputGroup('inputConfirmNewPassword', 'password', 'Confirm new password')
                    button.btn.btn-primary.align-self-end(id='changePassword') Change password
                .d-flex.align-items-center.justify-content-between.mt-5
                    h5 Delete profile
                    btn.btn.btn-danger.mt-3 Delete profile
























