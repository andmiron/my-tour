header
    nav.navbar.navbar-expand-lg.border-bottom.sticky-top.bg-light
        .container-lg
            a.navbar-brand.fs-3(href='/') My Tour
            button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
                span.navbar-toggler-icon
            #navbarNav.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href="/") Home
                    li.nav-item
                        a.nav-link(href="/tours") Tours
                    li.nav-item
                        a.nav-link(href="/guides") Guides
                ul.navbar-nav.ms-auto
                    if user
                        .nav-item.dropdown
                            button.btn.btn-link.dropdown-toggle(data-bs-toggle="dropdown", aria-expanded="false")
                                span.text-secondary.mx-2= user.email
                                img.img-fluid.rounded-circle(src= user.photo alt=`User photo` style="height:2em")
                            ul.dropdown-menu
                                li
                                    a.dropdown-item(href="/profile") Profile
                                    a.dropdown-item(href="/my-tours").
                                        My tours #[span.badge.text-bg-secondary.align-middle= user.tours.length]
                                    a.dropdown-item(href="/my-bookings").
                                        My bookings #[span.badge.text-bg-secondary.align-middle= user.bookings.length]
                                    a.dropdown-item(href="/my-reviews").
                                        My reviews #[span.badge.text-bg-secondary.align-middle= user.reviews.length]
                                hr
                                li
                                    btn.btn.btn-secondary.dropdown-item.logout-btn Log out
                    else
                        li.nav-item.mx-1
                            a.nav-link(href="/login" role='button') Login
                        li.nav-item.mx-1
                            a.nav-link(href="/signup" role='button') Sign Up
