extends base

block content
    .form-signin.w-25.m-auto.p-4.border.rounded-5.bg-light.shadow
        form.d-flex.flex-column.forget-password-form
            h1.h3.mb-3.fw-normal.text-center Forget password
            .form-floating.mb-4
                input.form-control(type='email' id='floatingEmail' placeholder='name@example.com' name='email' required)
                label(for='floatingEmail') Email address
            button.btn.btn-primary.w-100.py-2(type='submit') Reset password