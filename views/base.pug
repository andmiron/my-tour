doctype html
html
    head
        block head
            meta(charset='UTF-8')
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
            link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
            title My Tour | #{title}

    body.bg-light.h-100(style="background: linear-gradient(rgba(248,249,250,.99), rgba(248,249,250,.66)), url(\"/img/base.png\"); background-repeat: no-repeat; background-position: 50% 0%")
        .container-lg.min-vh-100.d-flex.flex-column
            header
                nav.navbar.navbar-expand-lg.border-bottom.fixed-top.bg-light
                    .container-lg
                        a.navbar-brand(href='/') My Tour
                        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
                            span.navbar-toggler-icon
                        #navbarNav.collapse.navbar-collapse
                            ul.navbar-nav.mx-auto
                                li.nav-item
                                    a.nav-link(href="#") Home
                                li.nav-item
                                    a.nav-link(href="#") About
                                li.nav-item
                                    a.nav-link(href="#") Services
                                li.nav-item
                                    a.nav-link(href="#") Contact
                            ul.navbar-nav.ml-auto
                                if user
                                    li.nav-item.mx-1
                                        button.btn.btn-outline-secondary Logout
                                    li.nav-item.mx-1
                                        img(src=`${user.photo}` alt=`User photo`)
                                        span=user.email
                                else
                                    li.nav-item.mx-1
                                        a.nav-link.btn.btn-primary(href="/login" role='button') Login
                                    li.nav-item.mx-1
                                        a.nav-link.btn.btn-primary(href="/signup" role='button') Sign Up

            block content

            footer.footer.mt-auto.py-3.bg-light.border-top.position-relative
                .d-flex.align-items-center.justify-content-between
                    ul.nav.justify-content-center
                        li.nav-item
                            a.nav-link.text-body-secondary(href="#") Home
                        li.nav-item
                            a.nav-link.text-body-secondary(href="#") About
                        li.nav-item
                            a.nav-link.text-body-secondary(href="#") Services
                        li.nav-item
                            a.nav-link.text-body-secondary(href="#") Contact
                    p.text-center.text-body-secondary &copy Andrii Myronenko, 2024

            //script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.5/axios.min.js')
            //- script(src='/js/mapbox.js')
            //- script(src='/js/login.js')
            //- script(src='https://js.stripe.com/v3/')
            //- script(src='/js/bundle.js')

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
        script(src="/js/index.js")

