doctype html
html
    head
        block head
            meta(charset='UTF-8')
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
            link(rel='shortcut icon'  href='img/favicon.ico')
            link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
            title My Tour | #{title}

    body.container-lg.bg-light
        header.container
            nav.navbar.navbar-expand-lg.border-bottom
                .container-fluid
                    a.navbar-brand(href='/') My Tour
                    button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    #navbarNav.collapse.navbar-collapse
                        ul.navbar-nav.mx-auto
                            li.nav-item
                                a.nav-link(href="#") Home
                            li.nav-item
                                a.nav-link(href="#") About
                            li.nav-item
                                a.nav-link(href="#") Services
                            li.nav-item
                                a.nav-link(href="#") Contact
                        ul.navbar-nav.ml-auto
                            li.nav-item
                                a.nav-link.btn.btn-primary(href="/login" role='button') Login
                            li.nav-item
                                a.nav-link.btn.btn-primary(href="/signup" role='button') Sign Up

        main
            block content

        footer.py-4.my-4.container.fixed-bottom
            ul.nav.justify-content-center.border-bottom.pb-3.mb-3
                li.nav-item
                    a.nav-link.px-2.text-body-secondary(href="#") Home
                li.nav-item
                    a.nav-link.px-2.text-body-secondary(href="#") About
                li.nav-item
                    a.nav-link.px-2.text-body-secondary(href="#") Services
                li.nav-item
                    a.nav-link.px-2.text-body-secondary(href="#") Contact
            p.text-center.text-body-secondary &copy Andrii Myronenko, 2024

